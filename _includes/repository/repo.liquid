{% assign repo_url = include.repository | split: '/' %}
{% if site.data.repositories.github_users contains repo_url.first %}
  {% assign show_owner = false %}
{% else %}
  {% assign show_owner = true %}
{% endif %}

<div class="repo p-2 text-center">
  {% if include.repository.private == false %}
  <a href="https://github.com/{{ include.repository.name }}">
    <img class="repo-img-light w-100" alt="{{ include.repository.name }}" src="https://github-readme-stats.vercel.app/api/pin/?username={{ include.repository.name | split: '/' | first }}&repo={{ include.repository.name | split: '/' | last }}&theme=default&show_owner={{ show_owner }}">
    <img class="repo-img-dark w-100" alt="{{ include.repository.name }}" src="https://github-readme-stats.vercel.app/api/pin/?username={{ include.repository.name | split: '/' | first }}&repo={{ include.repository.name | split: '/' | last }}&theme=dark&show_owner={{ show_owner }}">
  </a>
  {% endif %}
</div>
